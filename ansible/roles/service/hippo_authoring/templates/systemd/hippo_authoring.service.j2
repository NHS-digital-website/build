[Unit]
Description=Hippo CMS Server
After=network.target

[Service]
Type=forking

Restart=on-failure
ExecStart=/home/{{ hippo_authoring.user }}/tomcat/bin/startup_wrapper.sh
ExecStop=/home/{{ hippo_authoring.user }}s/tomcat/bin/shutdown_wrapper.sh

User={{ hippo_authoring.user }}
Group={{ hippo_authoring.user }}

[Install]
WantedBy=multi-user.target
