# site
server {
	listen 80 default_server;
	server_name {{ hippocms.domains.site }};

	location / {
		proxy_set_header Host $host;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Real-IP $remote_addr;

		proxy_redirect http://$host/site http://$host/;

		proxy_pass http://localhost:8080/site/;
	}
}

# cms
server {
	listen 80;
	server_name {{ hippocms.domains.cms }};

	location /site {
		proxy_set_header Host $host;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Real-IP $remote_addr;

		proxy_pass http://localhost:8080/site/;
	}

	location / {
		proxy_set_header Host $host;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Real-IP $remote_addr;

		proxy_cookie_path /cms /;

		proxy_redirect http://$host/cms/ http://$host/;

		proxy_pass http://localhost:8080/cms/;
	}
}
